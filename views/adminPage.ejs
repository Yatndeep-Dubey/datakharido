<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <!--Tailwind Link-->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- jquerry link  -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
</head>

<body>
    <div class="bg-[#87CEEB] h-[6rem] flex justify-between items-center px-5">
        <p class="text-2xl font-bold">Datakharido</p>
        <div id="add_data_button" class="p-2 rounded-lg bg-green-700 text-white border-2 border-green-300 cursor-pointer ">
            <p>Add Data + </p>
        </div>
        <div class="flex items-center space-x-5">
            <img src="../public/images/logINIcon.png" alt="">
            <p class="text-2xl font-bold">Admin</p>
        </div>
    </div>
     
<table class="w-full divide-y divide-gray-200 display" id="data_table" >
    <thead>
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Index</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Mobile</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Requirement</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
      <% data.forEach(function(element,index) { %>
        <tr v-for="(item, index) in yourData" :class="{ 'bg-gray-50': index % 2 === 0 }">
          <td class="px-6 py-4 whitespace-nowrap">
            <%=index%>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <%=element.name%>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <%=element.email%>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <%=element.phone_number%>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <%=element.requirements%>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <%= new Date(element.createdAt).toDateString() %>
          </td>
        </tr>
        <% }); %>
    </tbody>
  </table>


  <div id="add-data" style=" background: linear-gradient(to bottom, rgba(0, 0, 0, 0.25), rgba(0, 0, 0, 0.25))" class="w-[100vw] h-[100vh] flex justify-center items-center top-0 bg-[rgba(0, 0, 0, 0.25)] top-0 bottom-0 fixed overflow-y-scroll z-30
  overflow-hidden hidden">
      <div
        class="lg:w-[70%] w-[95%] relative  m-3  gap-3 mx-auto bg-white top-auto  z-30  p-[1.5rem] rounded-[1.25rem] shadow-md "
        id="contactUs">
        <form id="myForm" action="add_data" method="post">
            <div class="flex justify-between items-center">
                <h1 class="text-2xl font-bold">Add Data</h1>
                <div id="close" class="p-2 rounded-lg bg-red-700 text-white border-2 border-red-300 cursor-pointer ">
                <p id="closeForm">Close</p>
                </div>
            </div>
            <div class="flex flex-col space-y-5">
                <label>Name</label>
                <input type="text" name="name" id="name" class="border-2 p-2 border-gray-400">
                <label>Email</label>
                <input type="email" name="email" id="email" class="border-2 p-2 border-gray-400">
                <label>Mobile</label>
                <input type="text" name="phone_number" id="mobile" class="border-2 p-2 border-gray-400">
                <label>Requirement</label>
                <input type="text" name="requirements" id="requirement" class="border-2 p-2 border-gray-400">
                <button type="submit" class="text-xl p-2 bg-blue-400" id="myButton">Add Data</button>
            </div>
        </form>
      </div>
  </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
<script>
    $('#add_data_button').click(function(){
        $('#add-data').css('display','flex');
    })
    $('#closeForm').click(function(){
        $('#add-data').css('display','none');
    })

   
</script>
</html>