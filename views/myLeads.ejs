<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <!--Tailwind Link-->
    <script src="https://cdn.tailwindcss.com"></script>

    <style>
        .custom-div {
            margin: 10px;
            padding-left: 2.5rem;
            padding-right: 2.5rem;
            border-radius: 5px;
        }
    </style>
</head>

<body class="bg-gray-100">


    <!-- navbar -->

    <div class="bg-[#87CEEB] h-[6rem] flex items-center justify-between px-[3rem] ">
        <div class="text-4xl font-extrabold ">DataKharido</div>

        <div class="flex items-center gap-4 ">
            <div class="">
                
            </div>
           <a href="home.html"><img src="images/logINIcon.png" alt=""></a> 

        </div>
    </div>

    <!-- navbar -->

    <!-- header  -->
    
    <a href="/" class=""><img src="../public/images/backIcon.png" class=" mt-2 h-8 w-8  left-8 bg-white rounded-md cursor-pointer hover:shadow-xl" alt=""></a> 

    <div class='flex justify-between mt-4 px-[3rem] '>
        <p class=" flex text-lg font-bold items-center">Leads will be Updated on Every Monday at 10:00:00 AM </p>
        
    </div>
    <table class="w-full divide-y divide-gray-200 display" id="data_table" >
        <thead>
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Index</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Mobile</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Requirement</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% data.forEach(function(element,index) { %>
            <tr v-for="(item, index) in yourData" :class="{ 'bg-gray-50': index % 2 === 0 }">
                <td class="px-6 py-4 whitespace-nowrap">
                    <%=index%>
                  </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <%=element.name%>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <%=element.email%>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <%=element.phone_number%>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <%=element.requirements%>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <%= new Date(element.createdAt).toDateString() %>
              </td>
            </tr>
            <% }); %>
        </tbody>
      </table>
    

    <!-- header  -->

    <!-- main Section -->

   
    <div id="app" class="mt-[4rem]"></div>


   

    <script>
       

        const container = document.getElementById('app');

        items.forEach((item) => {
            const div = document.createElement('div');
            div.className = 'custom-div'; // Apply the custom style class
            div.innerHTML = `<div class='grid grid-cols-12 items-center  solid bg-white rounded-xl h-[5rem] ' >
        <div class ="col-span-2 ml-[3rem]"> 
        <label class='flex gap-3'>
            
            ${item.id}
          </label>   
        </div>
        <div class="col-span-2 text-center">${item.name}</div>
        <div class="col-span-2 text-center">${item.email}</div>
        <div class="col-span-1 text-center">${item.phoneNo}</div>
        <div class="col-span-3 text-center">${item.product}</div>
        <div class="col-span-2 text-end pr-2">
          <p class='pr-10'>${item.cost}</p>
        </div>
    </div>`;
            container.appendChild(div);
        });
    </script>
</body>

</html>